.chat-main
  .chat-main__group-info
    .chat-main__group-info__leftbox
      .chat-main__group-info__leftbox__current
        = @group.name
      %ul{class: "chat-main__group-info__leftbox__group-users"}
        Member:
        - @group.users.each do |user|
          %li{class: "chat-main__group-info__leftbox__group-users__member"}
            = user.name
    = link_to edit_group_path(@group), class: "chat-main__group-info__edit" do
      Edit


  .chat-main__message-list
    = render @messages

  .chat-main__form
    = form_for [@group, @message], html: {class: 'chat-main__form__new-message'} do |f|
      .chat-main__form__new-message__input-box
        = f.text_field :content, class: 'chat-main__form__new-message__input-box__text ', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'submit-btn'
