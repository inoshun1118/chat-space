.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      .side-bar__user-name__top-items__name 
        = current_user.name
      .side-bar__user-name__top-items__icons
        = link_to new_group_path, class: "side-bar__user-name__top-items__icons__icon1" do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user), class: "side-bar__user-name__top-items__icons__icon2" do
          = icon('fa', 'cog')
  .side-bar__group-list
    .side-bar__group-list__groups
      - current_user.groups.each do |group|
        .side-bar__group-list__groups__group
          = link_to group_messages_path(group) do
            .side-bar__group-list__groups__group__name
              = group.name
            .side-bar__group-list__groups__group__message
              = group.show_last_message